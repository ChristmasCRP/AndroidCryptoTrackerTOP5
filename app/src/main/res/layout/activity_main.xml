<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#DCD6F7"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/bitcoinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena BTC: $..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2B2B2B"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/marketCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kapitalizacja rynku: ..."
        android:textSize="16sp"
        android:textColor="#444" />

    <TextView
        android:id="@+id/btcDominance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Udział BTC: ..."
        android:textSize="16sp"
        android:textColor="#444" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odśwież dane"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#6C63FF"
        android:textColor="#FFF"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 5 kryptowalut:"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textColor="#2B2B2B" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top5Recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />
</LinearLayout>
